# Application
NODE_ENV=development
PORT=5000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT
JWT_SECRET=your-super-secret-access-token-key-min-32-chars
JWE_SECRET_KEY=your-super-secret-refresh-token-key-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=30m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Security
BCRYPT_SALT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5
REGISTER_RATE_LIMIT_MAX=3

# Logging
ENABLE_LOGGING=true
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Admin Default Password (change in production)
ADMIN_DEFAULT_PASSWORD=your_admin_default_password
SYSTEM_EMAIL=system_email

SYSTEM_EMAIL_PASSWORD=your_system_email_password
