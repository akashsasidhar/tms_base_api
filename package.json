{
  "name": "task_management_api",
  "version": "1.0.0",
  "description": "Secure RBAC-based admin platform backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "dev:simple": "ts-node -r tsconfig-paths/register server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "create-db": "ts-node scripts/create-db.ts",
    "migrate": "ts-node scripts/migrate.ts db:migrate",
    "migrate:undo": "ts-node scripts/migrate.ts db:migrate:undo",
    "migrate:undo:all": "ts-node scripts/migrate.ts db:migrate:undo:all",
    "seed": "ts-node scripts/seed.ts db:seed:all",
    "seed:undo": "ts-node scripts/seed.ts db:seed:undo:all",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "rbac",
    "admin",
    "express",
    "typescript",
    "sequelize"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "jose": "^5.2.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "cookie-parser": "^1.4.6",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/cookie-parser": "^1.4.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "sequelize-cli": "^6.6.2",
    "prettier": "^3.2.5",
    "@types/uuid": "^9.0.7",
    "@types/sequelize": "^4.28.20",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
